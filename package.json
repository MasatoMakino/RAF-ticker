{
  "name": "@masatomakino/raf-ticker",
  "version": "0.5.3",
  "description": "Simple ticker with requestAnimationFrame.",
  "main": "lib/index.js",
  "module": "esm/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib",
    "esm"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://MasatoMakino@github.com/MasatoMakino/RAF-ticker.git"
  },
  "author": "MasatoMakino <unagiinu.g@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "eventemitter3": "^5.0.1"
  },
  "devDependencies": {
    "@masatomakino/gulptask-demo-page": "^0.7.0",
    "@types/jest": "^29.5.1",
    "browser-sync": "^2.29.1",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.1",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typedoc": "^0.25.0",
    "typescript": "^5.1.3"
  },
  "scripts": {
    "test": "jest",
    "coverage": "jest --coverage",
    "prepare": "husky install",
    "preversion": "git checkout main && git pull && npm ci && npm run test",
    "postversion": "git add package.json package-lock.json && git checkout -b version/$(git describe --tags --abbrev=0)",
    "start:dev": "npm run server & npm run watch:tsc & npm run watch:demo",
    "build": "npm run buildTS && npm run demo && npm run typedocs",
    "demo": "npx @masatomakino/gulptask-demo-page",
    "buildTS": "tsc --project tsconfig.cjs.json & tsc --project tsconfig.esm.json",
    "typedocs": "npx typedoc --out ./docs/api src/index.ts",
    "server": "browser-sync ./docs/demo -w",
    "watch:demo": "npm run demo -- -W",
    "watch:tsc": "tsc -W --incremental --project tsconfig.cjs.json & tsc -W --incremental --project tsconfig.esm.json"
  },
  "bugs": {
    "url": "https://github.com/MasatoMakino/RAF-ticker/issues"
  },
  "homepage": "https://github.com/MasatoMakino/RAF-ticker#readme",
  "directories": {
    "doc": "docs",
    "lib": "lib"
  },
  "lint-staged": {
    "*.{js,ts,css,md}": "prettier --write"
  }
}
